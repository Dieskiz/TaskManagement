@model IEnumerable<User> 
@{
    ViewData["Title"] = "EmployeesList";
}

@if (TempData["success"] != null)
{
    <div id="alertContainer" class="alert alert-success">
        @TempData["success"]
    </div>
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Employees List</h2>                
        </div>
        <div class="col-6 text-end">
            <a asp-controller="User" asp-action="AddEmployee" class="btn btn-primary">
               Add New Employee
            </a>                       
        </div>
    </div>
</div>
<br />
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Username 
            </th>
            <th>
                Password
            </th>
            <th>
                Role
            </th>            
            <th>
                Birthday
            </th>
            <th>
                PhoneNumber
            </th>
            <th>
                Email
            </th>            
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="30%">
                    @obj.Username
                </td>
                <td width="30%">
                    @obj.Password
                </td>
                <td width="30%">
                    @obj.Role
                </td>                
                <td width="30%">
                    @obj.Birthday
                </td>
                <td width="30%">
                    @obj.PhoneNumber
                </td>
                <td width="30%">
                    @obj.Email
                </td>                              
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="User" asp-action="EditEmployee" asp-route-id="@obj.UserId" class="btn btn-primary mx-2">Edit</a>
                        <a asp-controller="User" asp-action="DeleteEmployee" asp-route-id="@obj.UserId" class="btn btn-danger mx-2">Delete</a>                        
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    // Wait for the page to be fully loaded
    document.addEventListener("DOMContentLoaded", function() {
        // Get the alert container
        var alertContainer = document.getElementById("alertContainer");

        // Hide the alert after 5 seconds
        setTimeout(function() {
            alertContainer.style.display = "none";
        }, 5000); // 5000 milliseconds = 5 seconds
    });
</script>

